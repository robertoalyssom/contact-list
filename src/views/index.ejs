<%- include("./includes/head") %>
<%- include("./includes/nav") %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="display-1 text-center">Contact List</h1>
            <p class="text-center lead">Your contacts are below.</p>

            <%- include('./includes/messages') %>

            <% if(contacts.length > 0) { %>
            <div class="table-responsive">
                <table class="table my-3">
                    <% contacts.map((contact)=> { %>
                    <tr>
                        <td><%= contact.fName %></td>
                        <td><%= contact.lName %></td>
                        <td><%= contact.phone %></td>
                        <td><%= contact.email %></td>
                        <td><a class="text-decoration-none" href="/contacts/index/<%= contact._id %>">Edit</a></td>
                        <td><a class="text-danger text-decoration-none"
                                href="/contacts/delete/<%= contact._id %>">Exclude</a></td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <% } else { %>
            <p class="text-center lead">There aren't contacts in your contact book!</p>
            <% } %>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("./includes/footer") %>